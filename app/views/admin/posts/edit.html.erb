<div class="row  new" style="height: 600px">
	<div class="container ">
		<h1 class="text-center text-secondary">Edit Post</h1>
		<%= form_for [:admin, @post] do |f| %>
			<div class="form-group">
				<%= f.label :title, class: "text-secondary" %>
				<%= f.text_field :title , class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :body,  class: "text-secondary" %>
				<%= f.text_area :body , class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :image,class: "text-secondary" %>
				<%= f.file_field :image, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :category, class: "text-secondary" %>
				<%= f.collection_select :category_ids, @categories, :id, :title, include_blank: 'Choose Category', class: "form-group" %>
			</div>
			<div class="form-group">
				<%= f.submit  class: "btn btn-secondary" %>
			</div>
		<% end %>
	</div>
</div>